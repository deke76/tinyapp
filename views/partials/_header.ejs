<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup" style="justify-content:space-between">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (user === undefined) { %>
        <% console.log('in _header user is undefined'); %>
        <form class="form-inline" action="/login" method="GET">
          <label for="userLogin"></label>
          <!-- <input class="form-control" type="text" name="userLogin" placeholder="User Name"> -->
          <button type="submit" class="btn btn-primary ml-2" value="Login" >Login</button></form>
      <% } else { %>
        <% console.log('user is', user); %>
        <form class="form-inline" action="/logout" method="POST">
          <label class="text-light" for="username"><%= user.email %></label>
          <button type="submit" class="btn btn-primary ml-2" name="username"value="Logout">Logout</button></form>
      <% } %>
